<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:background="@drawable/round_corner_item">


        <TextView
            android:id="@+id/english_name_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="English Name"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:paddingLeft="10dp"/>

        <TextView
            android:id="@+id/bangla_name_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="بلوچی نام"
            android:layout_marginBottom="8dp"
            android:layout_below="@id/english_name_textview"
            android:paddingLeft="10dp"/>



</RelativeLayout>