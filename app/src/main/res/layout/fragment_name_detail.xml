<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.banglababynames.doradevelopers.banglababynames.Fragments.NameDetailFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/english_name_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="English Name"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/bangla_name_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="নাম"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"/>
+

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="নামের অর্থ:"
            android:textStyle="bold"
            android:textSize="16dp"
            />

        <TextView
            android:id="@+id/bangla_meaning_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="নামের অর্থ database"
            android:layout_marginBottom="20dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gender: "
            android:textStyle="bold"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/gender_english_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textSize="16dp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Meaning in English:"
            android:textSize="16dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/english_meaning_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Meaning in English database"
            android:textSize="16dp" />


    </LinearLayout>

</FrameLayout>
